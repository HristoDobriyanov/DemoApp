@model Contragent
@{
    ViewData["Title"] = "Details";
}

<h1>Details for @Model.Name</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>VAT Number</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Address</td>
            <td>@Model.Email</td>
            <td>@Model.VATNumber</td>
        </tr>
    </tbody>
</table>